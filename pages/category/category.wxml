                l-line-class="l-seg-line"
                placement="left">
            <l-segment-item key="1" tab="米兰"></l-segment-item>
            <l-segment-item key="2" tab="国米"></l-segment-item>
            <l-segment-item key="3" tab="曼抬"></l-segment-item>
            <l-segment-item key="4" tab="巴傻"></l-segment-item>
